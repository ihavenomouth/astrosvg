---
import Footer from '../components/Footer.astro';
import BotonSubir from '../components/BotonSubir.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<slot />
		<BotonSubir/>
		<Footer>Javier Mancera Fernández</Footer>
	</body>
</html>
<style is:global>
	:root {
		--text: #eee;
		--primary: rebeccapurple;
		--accent: cyan;
		--background: #124;
		--gradient-black: linear-gradient(0deg, transparent, black);
		--text-code: cyan;
		--hiperlink: #ff66b5;
		);
	}
	html {
		font-family: Lato, Noto, system-ui, sans-serif;
		background: var(--background);
		color: var(--text);
		scroll-behavior: smooth;
	}
	body{
		margin:0;
	}
	header{
		/* background-color: #115; */
		background-image: var(--gradient-black);
		padding: 1rem;
	}
	main {
		max-width: 80ch;
		margin: 0 auto;
		padding: 1rem;
	}
	h1{
		font-size: 4rem;
		text-align: center;
	}
	h2{
		font-size: 2rem;
		font-weight: 200;
		border-bottom: 1px solid var(--text);
		margin-right: 5rem;
	}
	h3{
		font-weight: 200;
		font-size: 1.5rem;
		border-left: 5px solid var(--text);
		border-bottom: 1px solid var(--text);
		width: 50%;
		padding-inline:1rem;
	}
	.text-gradient{
		color:transparent;
		background-image: linear-gradient(0deg,cyan, var(--primary));

		background-clip: text;
		-webkit-background-clip: text;
	}
	footer{
		filter:brightness(0.5);
		background-color: var(--background);
		padding: 2rem;
		text-align: center;
	}



	.introducción{
		border: 2px solid white;
		padding: 2rem;
		box-shadow: 0px 0px 20px var(--primary);
		margin-bottom: 2rem;
		background-image: var(--gradient-black)
	}
	a{
		color: var(--hiperlink);
	}

	code{
		color: var(--text-code);
		font-size:0.9rem;
	}
	pre{
		background-image: var(--gradient-black);
		color: var(--text-code);
		font-size:0.9rem;
		border-radius: 5px;
		overflow: auto;
		padding: 0.5rem;
	}
	/* pre[contenteditable=true]{
		color: #eee;
		background-color: black;
		background-image: none;
	} */
	textarea{
		font-size:0.9rem;
		color: #eee;
		background-color: black;
		width:90%;
		height: 15rem;
		border:0;
		border-radius: 5px;
		padding: 0.5rem;
		margin-block:1rem;
	}

	button{
		border: 2px solid var(--primary);
		border-radius: 5px;
		padding-inline: 1rem;
		padding-block: 0.5rem;
		background-color: var(--primary);
		color: var(--text);
	 	&:hover{
			filter: brightness(1.1);
			cursor:pointer;
		}
	}
	input{
		border: 2px solid var(--primary);
		border-radius: 5px;
		padding-inline: 1rem;
		padding-block: 0.5rem;
		background-color: #124;
		color: var(--text);
		&:focus{
			outline:0;
			border-color: var(--accent);
		}
	}
	input[type=range]{
		vertical-align: middle;
	}
	label{
		display:inline-block;
		background-color: var(--primary);
		padding-inline: 0.5rem;
		padding-block: 0.15rem;
		min-width: 15ch;
	}

	.contenido-centrado{
		display:flex; 
		justify-content:center;
	}

	.enunciado{
		border-left: 5px solid white;
		padding: 1rem;
		box-shadow: 0px 0px 20px var(--primary);
		margin-top: 2rem;
		/* background-image: var(--gradient-black) */
	}

	table{
		border-collapse: collapse;
	}
	td, th{
		border: 1px solid white;
		padding-block: 0.5rem;
		padding-inline: 1rem;
	}
	th{
		background-color: var(--primary);
	}
	table.centrada{
		margin:0 auto;
	}
</style>
